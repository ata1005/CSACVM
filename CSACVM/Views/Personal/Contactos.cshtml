@using CSACVM.Modelos.ViewModels
@model CSACVM.Modelos.ViewModels.ContactoVM
<link rel="stylesheet" type="text/css" href="~/css/datatables.min.css" />
<link rel="stylesheet" type="text/css" href="~/css/comunes.css" />

<div class="row mt-4">
    <div class="row">
        <div class="col-3">
            <h4>Tus contactos</h4>
        </div>
    </div>
    <hr class="mt-3" />
    <div class="row">
        <div class="card mt-2" id="datatableContactos">
