                <table id="tablaContactos" class="table sizeFont stripe nowrap w-100">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="row">
        <div class="col-3">
            <h4>Buscar Contactos</h4>
        </div>
    </div>
    <hr class="mt-3" />
    <div class="row">
        <div class="card mt-2" id="datatableBuscarContactos">
            <div class="table-responsive overflow-hidden">
                <table id="tablaBuscarContactos" class="table sizeFont stripe nowrap w-100">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/js/Personal/contactos.js" asp-append-version="true"></script>
<script type="text/javascript" src="~/js/datatables.min.js" asp-append-version="true"></script>
<script type="text/javascript" src="~/js/moment.js" asp-append-version="true"></script>
<script>
    var usrs = @Html.Raw(Json.Serialize(Model.ListaUsuarios));
    var contactos = @Html.Raw(Json.Serialize(Model.ListaContactos));
    inicializarTablaContactos(contactos);
    inicializarTablaBuscarContactos(usrs);
</script>