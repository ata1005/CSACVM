@using CSACVM.Modelos.ViewModels
@model CSACVM.Modelos.ViewModels.CurriculumVM
<link rel="stylesheet" type="text/css" href="~/css/datatables.min.css" />
<link rel="stylesheet" type="text/css" href="~/css/comunes.css" />
<form>
    <div class="row">
        <div class="row ">
            <div class="col-3">
                <h4>Currículums creados</h4>
            </div>
            <div class="col-4">
                <a class="btn btn-primary w-50" href="javascript:crearCurriculum();"><i class="fa-solid fa-plus me-3"></i>Crear Currículum</a>
            </div>
        </div>
        <hr class="mt-3"/>
        <div class="row">
            <div class="card mt-2" id="datatableCurriculums">
                <div class="table-responsive overflow-hidden">
                    <table id="tablaCurriculums" class="table sizeFont stripe nowrap w-100">
                        <thead>
                            <tr>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</form>
<div class="modal fade" id="modalCrearCV" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-w" role="document">
        <div class="modal-content ">
            <div class="modal-header border-bottom-0">
                <label></label>
                <button type="button" class="btn btn-secondary fa-solid fa-xmark close ms-auto" aria-label="Close" onclick="cerrarModal('modalCrearCV')"></button>
            </div>
            <div class="modal-body" id="modalBody">
                <div class="row-12 ms-2" id="divsCrearCV">
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modalEliminarCV" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-w" role="document">
        <div class="modal-content ">
            <div class="modal-header border-bottom-0">
                <label></label>
                <button type="button" class="btn btn-secondary fa-solid fa-xmark close ms-auto" aria-label="Close" onclick="cerrarModalEliminar('modalEliminarCV')"></button>
            </div>
            <div class="modal-body" id="modalBodyEliminar">
                <div class="row-12 ms-2 d-flex justify-content-center">
                    <h4 class="form-label">¿Estás seguro de que quieres eliminar el currículum?</h4>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/js/Curriculum/curriculum.js" asp-append-version="true"></script>
<script type="text/javascript" src="~/js/datatables.min.js" asp-append-version="true"></script>
<script type="text/javascript" src="~/js/moment.js" asp-append-version="true"></script>
<script>
    var cvs = @Html.Raw(Json.Serialize(Model.ListaCurriculums));
    inicializarTablaCurriculums(cvs);
</script>