<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CSACVM</title>
    <link rel="stylesheet" href="~/css/bootswatch.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/all.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @*<link rel="shortcut icon" type="image/png" href="~/CSA_Logo.ico" />*@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="col-2">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CSACVM</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
               
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item d-flex text-center align-items-baseline ms-1">
                            <label class="form-label">Buscar </label>
                            <input type="text" class="form-control ms-1"/>
                        </li>
                    </ul>
                    <ul class="navbar-nav d-flex justify-content-end flex-grow-1">
                        <li class="nav-item align-items-end ms-2 d-flex">
                            <a class="fa-2xl fa fa-power-off c-grey" id="btnLogout" asp-controller="Login" asp-action="Logout"></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid d-flex">
        <aside class="overflow-auto col-2 ">
            <nav class="align-items-center">
                <a asp-controller="Login" asp-action="Profile">
                    @*<img src="" alt="">Nombre*@
                    Nombre
                </a>
                <a asp-controller="Login" asp-action="Profile">
                    <div>
                    </div>
                    Editar Perfil
                </a>
                <hr />
                <a asp-controller="Personal" asp-action="Contactos">
                    <div>
                    </div>
                    Contactos
                </a>
                <a asp-controller="Personal" asp-action="Mensajes">
                    <div>
                    </div>
                    Mensajes
                </a>
                <a asp-controller="Personal" asp-action="Directorio">
                    <div>
                    </div>
                    Directorio
                </a>
                <a asp-controller="Personal" asp-action="Notificaciones">
                    <div>
                    </div>
                    Notificaciones
                </a>
                <hr />
                <a asp-controller="Home" asp-action="Index">
                    <div>
                    </div>
                    Calendario
                </a>
            </nav>
        </aside>
        <main class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </main>



    </div>
   @* <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>*@

    @*    <footer class="border-top footer text-muted">
    <div class="container">
    &copy; 2022 - CSACVM - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
