@using CSACVM.Modelos.ViewModels
@model CSACVM.Modelos.ViewModels.UsuarioAdminVM
<link rel="stylesheet" type="text/css" href="~/css/datatables.min.css" />

<div class="row-12 mt-2 d-flex">
    <div class="col-lg-4 col-md-4 col-sm-4 pe-3">
        <label class="fw-bold c-grey">Nombre Usuario</label>
        <input class="form-control" id="nombreUsuarioAdmin" />
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4 pe-3">
        <label class="fw-bold c-grey">Nombre</label>
        <input class="form-control" id="nombreAdmin" />
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4 pe-3">
        <label class="fw-bold c-grey">Apellido</label>
        <input class="form-control" id="apellidoAdmin" />
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4 pe-3">
        <input type="text" class="form-control" id="idUsuarioAdmin" hidden />
    </div>
</div>
<div class="row-12 mt-3 d-flex">
    <div class="col-lg-4 col-md-4 col-sm-4 pe-3">
        <div class="row-12">
            <input type="checkbox" id="activoAdmin" class="form-check-input me-2"/>Activo
        </div>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4 pe-3">
        <div class="row-12">
            <input type="checkbox" id="esAdminAdmin" class="form-check-input me-2" />Administrador
        </div>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4 pe-3">
        <button class="btn btn-primary" onclick="guardarCambios()">Guardar Cambios</button>
    </div>
</div>

<div class="row mt-4">
    <div class="row">
        <div class="col-3">
            <h4>Lista de Usuarios</h4>
        </div>
    </div>
    <hr class="mt-3" />
    <div class="row-12 d-flex">
        <div class="col-lg-2 col-md-2 col-sm-2 pe-3">
            <label class="fw-bold c-grey">Login</label>
            <input class="form-control" id="filtroLogin" />
        </div>
        <div class="col-2 pe-3">
            <label class="fw-bold c-grey">Nombre</label>
            <input class="form-control" id="filtroNombre" />
        </div>
        <div class="col-2 pe-3">
            <label class="fw-bold c-grey">Apellido</label>
            <input class="form-control" id="filtroApellido" />
        </div>
        <div class="col-lg-1 col-md-1 col-sm-1 pe-3 mt-auto">
            <div class="row-12">
                <input type="checkbox" id="filtroActivo" class="form-check-input me-2" />Activo
            </div>  
            <div class="row-12">
                <input type="checkbox" id="filtroAdmin" class="form-check-input me-2" />Admin
            </div>
        </div>
        <div class="col-lg-1 col-md-1 col-sm-1 pe-3 mt-auto">
            <div class="row-12">
                <input type="checkbox" id="filtroTodos" class="form-check-input me-2" />Todos
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 pe-3 mt-auto">
            <button class="btn btn-primary" onclick="filtrarUsuarios()">Filtrar</button>
        </div>
    </div>
    <hr class="mt-3" />
    <div class="row">
        <div class="card mt-2" id="datatableUsuariosAdmin">
            <div class="table-responsive overflow-hidden">
                <table id="tablaUsuariosAdmin" class="table sizeFont stripe nowrap w-100">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/js/Mantenimiento/mantUser.js" asp-append-version="true"></script>
<script type="text/javascript" src="~/js/datatables.min.js" asp-append-version="true"></script>
<script type="text/javascript" src="~/js/moment.js" asp-append-version="true"></script>
<script>
    var usrs = @Html.Raw(Json.Serialize(Model.ListaUsuarios));
    inicializarTablaUsuariosAdmin(usrs);
</script>