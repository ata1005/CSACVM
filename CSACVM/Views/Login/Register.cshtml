@model CSACVM.Modelos.ViewModels.RegisterVM

<form method="POST">
    <div class="row">
        <div class="col-6">
            <div class="card border-secondary">
                <h5 class="card-header">Datos Generales</h5>
                <div class="card-body d-flex w-100 justify-content-between">
                    <div class="form-group mt-2 col-5">
                        <label asp-for="Nombre">Nombre</label>
                        <input class="form-control" asp-for="Nombre" placeholder="Nombre" id="registroNombre" />
                    </div>
                    <div class="form-group mt-2 col-5">
                        <label asp-for="Apellido">Apellido</label>
                        <input class="form-control" asp-for="Apellido" placeholder="Apellido" id="registroApellido" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group mt-2">
                <label asp-for="NombreUser">Usuario</label>
                <input type="text" class="form-control" asp-for="NombreUser" placeholder="NombreUser" id="registroUser" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Password">Password</label>
                <input class="form-control" asp-for="Password" placeholder="Password" type="password" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="ConfirmPassword">Confirmar Contraseña</label>
                <input class="form-control" asp-for="ConfirmPassword" placeholder="Confirmar Contraseña" type="password" />
            </div>
        </div>
            <div class="form-group mt-2 mb-3">
                <label>Seleccionar Departamento</label>
               @* <select asp-items="@Model.ListaDepartamentos" asp-for="@Model.IdDepartamento" class="form-select">
                    <option disabled selected>Seleccione</option>
                </select>*@
            </div>
            <div class="mt-2 mb-3 d-flex">
                <input type="checkbox" class="form-check d-flex" id="Gestor" asp-for="Administrador" />
                <label class="ms-1" asp-for="Administrador">Marcar Como "Usuario Administrador"</label>
            </div>    
            <button class="btn btn-primary" type="submit">Registrar usuario</button>
        </div>
    </div>
</form>
<script type="text/javascript" src="~/js/Login/register.js" asp-append-version="true"></script>