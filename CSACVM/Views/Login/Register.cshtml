@model CSACVM.Modelos.ViewModels.RegisterVM

<form method="POST">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group mt-2">
                <label asp-for="Usuario">Usuario</label>
                <input type="text" class="form-control" asp-for="Usuario" placeholder="Usuario" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Nombre">Nombre</label>
                <input class="form-control" asp-for="Nombre" placeholder="Nombre" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Apellido">Apellido</label>
                <input class="form-control" asp-for="Apellido" placeholder="Nombre" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Password">Password</label>
                <input class="form-control" asp-for="Password" placeholder="Password" type="password" />
            </div>
            <div class="form-group mt-2">
                <label asp-for="ConfirmPassword">Confirmar Contraseña</label>
                <input class="form-control" asp-for="ConfirmPassword" placeholder="Confirmar Contraseña" type="password" />
            </div>
            <div class="form-group mt-2 mb-3">
                <label>Seleccionar Departamento</label>
                <select asp-items="@Model.ListaDepartamentos" asp-for="@Model.IdDepartamento" class="form-select">
                    <option disabled selected>Seleccione</option>
                </select>
            </div>
            <div class="mt-2 mb-3 d-flex">
                <input type="checkbox" class="form-check d-flex" id="Gestor" asp-for="Administrador" />
                <label class="ms-1" asp-for="Administrador">Marcar Como "Usuario Administrador"</label>
            </div>    
            <button class="btn btn-primary" type="submit">Signup</button>
        </div>
    </div>
</form>