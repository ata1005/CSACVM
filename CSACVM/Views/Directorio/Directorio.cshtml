@using CSACVM.Modelos.ViewModels
@model CSACVM.Modelos.ViewModels.DirectorioVM
<link rel="stylesheet" type="text/css" href="~/css/datatables.min.css" />
<form>
    <div class="row">
        <div class="row ">
            <div class="col-3">
                <h4>Notas del usuario</h4>
            </div>
            <div class="col-4">
                <button class="btn btn-primary w-50" asp-controller="Directorio" asp-action="Notas">Añadir Nota</button>
            </div>
        </div>
        <hr class="mt-3"/>
        <div class="row">
            <div class="card mt-2" id="datatableNotas">
                <div class="table-responsive overflow-hidden">
                    <table id="tablaNotas" class="table sizeFont stripe nowrap w-100">
                        <thead>
                            <tr>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</form>
<div class="modal fade" id="modalVer" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-w" role="document">
        <div class="modal-content ">
            <div class="modal-header border-bottom-0">
                <label></label>
                <button type="button" class="btn btn-secondary fa-solid fa-xmark close ms-auto" aria-label="Close" onclick="cerrarModal('modalVer')"></button>
            </div>
            <div class="modal-body" id="modalBody">
                <div class="row-12 ms-2" id="divsOrden">
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="~/js/Directorio/notas.js" asp-append-version="true"></script>
<script type="text/javascript" src="~/js/datatables.min.js" asp-append-version="true"></script>
<script type="text/javascript" src="~/js/moment.js" asp-append-version="true"></script>
<script>
    var notas = @Html.Raw(Json.Serialize(Model.ListaNotas));
    inicializarTablaNotas(notas);
</script>